{
  "expo": {
    "name": "Wear by Weather",
    "slug": "Wear by Weather",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/animated-welcome.gif",
    "scheme": "meuappclima",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Precisamos da sua localização para sugerir roupas com base no clima da sua cidade."
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.seuprojeto.weatherwear",
      "buildNumber": "1.0.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION"
      ],
      "package": "com.seuprojeto.weatherwear",
      "versionCode": 1
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/animated-welcome.gif",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
